extends includes/layout.pug

block content
  #category
    h1
      i(class="fa fa-folder-open")= page.category
    - page.posts.each(function(article){
      .article-list-item
        time(datetime=date_xml(article.date))= date(article.date, 'M.D, YYYY')
        a(href=url_for(article.path))= article.title || 'No Title'
        //- if article.link
        //-   a(href=url_for(article.link) target="_blank")
        //-     = article.title || 'No Title'
    - })

  include includes/sidemenu.pug
  include includes/pagination.pug

